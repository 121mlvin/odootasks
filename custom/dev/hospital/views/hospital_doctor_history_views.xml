<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_doctor_history_list" model="ir.actions.act_window">
        <field name="name">Doctor History</field>
        <field name="res_model">hospital.doctor.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_doctor_history_form" model="ir.ui.view">
        <field name="name">hospital.doctor.history.form</field>
        <field name="model">hospital.doctor.history</field>
        <field name="arch" type="xml">
            <tree string="Personal Doctor History Form">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="assignment_date"/>
            </tree>
        </field>
    </record>


    <record id="view_doctor_history_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.history.tree</field>
        <field name="model">hospital.doctor.history</field>
        <field name="arch" type="xml">
            <tree string="Personal Doctor History Tree">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="assignment_date"/>
            </tree>
        </field>
    </record>
</odoo>