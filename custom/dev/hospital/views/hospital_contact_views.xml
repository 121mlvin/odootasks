<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_contact_form" model="ir.ui.view">
        <field name="name">hospital.contact.form</field>
        <field name="model">hospital.contact</field>
        <field name="arch" type="xml">
            <form string="Emergency Contact">
                <group>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="gender"/>
                </group>
            </form>
        </field>
    </record>
</odoo>